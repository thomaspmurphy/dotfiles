# Oh My Zsh configuration
export ZSH="$HOME/.oh-my-zsh"

# Theme and plugins
ZSH_THEME="robbyrussell"
plugins=(git zoxide mise)

# Load Oh My Zsh
source $ZSH/oh-my-zsh.sh

# All custom configurations are now organized in ~/.oh-my-zsh/custom/
# - aliases.zsh: Personal command aliases
# - exports.zsh: Environment variables and PATH
# - tools.zsh: Tool initializations and completions
